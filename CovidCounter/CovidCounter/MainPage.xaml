    <FlyoutItem Title="Menu"
                FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent>
            <ShellContent.Icon>
                <FontImageSource Glyph="&#xf015;" FontFamily="{StaticResource Key=Solid}"/>
            </ShellContent.Icon>
            <views:Home/>
        </ShellContent>
        <ShellContent>
            <ShellContent.Icon>
                <FontImageSource Glyph="&#xf080;" FontFamily="{StaticResource Key=Solid}"/>
            </ShellContent.Icon>
            <views:CountryStats />
        </ShellContent>
        <ShellContent>
            <ShellContent.Icon>
                <FontImageSource Glyph="&#xf57c;" FontFamily="{StaticResource Key=Solid}"/>
            </ShellContent.Icon>
            <views:GlobalStat />
        </ShellContent>
        <ShellContent>
            <ShellContent.Icon>
                <FontImageSource Glyph="&#xf558;" FontFamily="{StaticResource Key=Solid}"/>
            </ShellContent.Icon>
            <views:AllCountries />
        </ShellContent>
    </FlyoutItem>
</Shell>
